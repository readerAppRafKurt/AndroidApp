    <!-- default theme -->
    <style name="background_default">
        <item name="android:background"> #ef5c40</item>
    </style>

    <!-- Base application theme is the default theme. -->
    <style name="Theme" parent="android:Theme"></style>

    <style name="Theme.lightSmall">
        <item name="textTitle">@style/light_small_title</item>
        <item name="textBody">@style/light_small_body</item>
        <item name="buttonText">@style/light_small_button</item>
    </style>

    <style name="Theme.lightMedium">
        <item name="textTitle">@style/light_medium_title</item>
        <item name="textBody">@style/light_medium_body</item>
        <item name="buttonText">@style/light_medium_button</item>
    </style>

    <style name="Theme.lightLarge">
        <item name="textTitle">@style/light_large_title</item>
        <item name="textBody">@style/light_large_body</item>
        <item name="buttonText">@style/light_large_button</item>
    </style>

    <style name="Theme.darkSmall">
        <item name="textTitle">@style/dark_small_title</item>
        <item name="textBody">@style/dark_small_body</item>
        <item name="buttonText">@style/dark_small_button</item>
    </style>

