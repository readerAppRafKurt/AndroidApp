    <!-- BackgroundTheme -->
    <!-- TODO testen default theme -->
    <style name="Theme.Gray">
        <item name="backgroundTheme">@style/gray_gradient</item>
        <item name="buttonTheme">@style/button_gray</item>
        <item name="listviewTheme">@style/listview_gray</item>
        <item name="spinnerTheme">@style/spinner_gray</item>
        <item name="backgroundTitleBar">@style/titleBar_gray</item>
    </style>

    <style name="Theme.Radial">
        <item name="backgroundTheme">@style/radial_gradient</item>
        <item name="backgroundTitleBar">@style/titleBar_radial</item>
    </style>

    <style name="Theme.DefaultTheme">
        <item name="backgroundTheme">@style/background_default</item>
        <item name="backgroundTitleBar">@style/titleBar_default</item>
    </style>

    <style name="PreferencesTheme" parent="android:Theme.Light">
        <item name="android:background">#FFEAEAEA</item>
    </style>

    <!-- Themes titlebar -->

    <style name="titleBar_gray">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="titleBar_radial">
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="titleBar_default">
        <item name="android:background">@color/dark_red</item>
    </style>

    <!-- ButtonTheme -->
    <style name="Theme.ButtonGray">
        <item name="buttonTheme">@style/button_gray</item>
    </style>

    <style name="button_gray" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_gray_theme</item>
    </style>

    <style name="Theme.ButtonBlue">
        <item name="buttonTheme">@style/button_blue</item>
    </style>

    <style name="button_blue" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_blue_theme</item>
        <item name="android:textColor">#ffffff</item>
    </style>

