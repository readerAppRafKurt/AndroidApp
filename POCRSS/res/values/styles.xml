    <style name="spinner_gray" parent="@android:style/Widget.Spinner">
        <item name="android:textColor">#111111</item>
    </style>

    <style name="Theme.SpinnerRed">
        <item name="spinnerTheme">@style/spinner_red</item>
    </style>

    <style name="spinner_red" parent="@android:style/Widget.Spinner">
        <item name="android:textColor">#ffffff</item>
    </style>

